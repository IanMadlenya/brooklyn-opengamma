[#ftl]
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:amq="http://activemq.apache.org/schema/core"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
  http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd">

  <!-- This config file is called from fullstack-example.ini via SpringActiveMqComponentFactory -->

    <bean id="mainActiveMQJmsConfiguration" class="com.opengamma.transport.jms.ActiveMQJmsConfiguration">
      <property name="brokerHost" value="${entity.broker.address}" />
      <property name="brokerPort" value="${entity.broker.openWirePort?c}" />
      <property name="timeout" value="3000" />
    </bean>

</beans>
